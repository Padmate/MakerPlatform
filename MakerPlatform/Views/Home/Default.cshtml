<script>


    $(function () {

        //初始化wow动画
        new WOW().init();
        InitSuspendedBtn();
        InitCarousel();
        //InitCollapse();
        //InitSlick();
        //InitTabPanel();
        InitialModal();
        InitSuperSlider();
        
        ServiceHover();
