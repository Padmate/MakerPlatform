@using MakerPlatform.Models;

@{
    ServiceType serviceType = (ServiceType)ViewData["ServiceType"];

}
<style>
    .areaStyle {
        min-height: 800px;
        padding-top: 150px;
    }
</style>
<!-- Header -->
<header>
    <div class="container">
        <div class="intro-text" style="padding-bottom:0px;">
        </div>
    </div>
</header>
<div class="container">
    @{
        if (serviceType != null)
        {
            var serviceModules = serviceType.ServiceModules;
            foreach (var module in serviceModules)
            {
                <section id="@module.ModuleCode">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12 text-center">
                                <h2 class="section-heading">@module.ModuleName</h2>
                            </div>
                        </div>
                        <div class="row">
                            @Html.Raw(@module.ModuleContent)
                        </div>
                    </div>
                </section>

            }
        }
    }
</div>
